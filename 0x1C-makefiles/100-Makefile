CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)


$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	@$(RM) *~ $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean
	@$(RM) $(NAME)

re: fclean all

$(OBJ): %.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

ifneq ($(wildcard m.h),)
include m.h
endif
